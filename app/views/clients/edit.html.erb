<turbo-frame id="client_edit_<%= @client.id %>">
  <div class="p-4 border-t">
    <h2 class="text-xl font-bold mb-2">Modifier le client</h2>
    <%= form_with model: @client, url: client_path(@client), method: :patch, data: { turbo_frame: "client_edit_#{@client.id}" } do |form| %>
      <div class="mb-2">
        <%= form.label :nom %>
        <%= form.text_field :nom, class: "w-full border px-2 py-1 rounded" %>
      </div>
      <div class="mb-2">
        <%= form.label :email %>
        <%= form.text_field :email, class: "w-full border px-2 py-1 rounded" %>
      </div>
      <div class="mb-2">
        <%= form.label :telephone %>
        <%= form.text_field :telephone, class: "w-full border px-2 py-1 rounded" %>
      </div>
      <div class="mb-2">
        <%= form.label :deposant, "Déposant ?" %>
        <%= form.check_box :deposant %>
      </div>
      <%= form.submit "Enregistrer", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    <% end %>
    <!-- Lien pour fermer ou réinitialiser le Turbo Frame (optionnel) -->
    <%= link_to "Fermer", 
                cancel_edit_client_path(@client, format: :turbo_stream),
                data: { turbo_frame: "client_edit_#{@client.id}" },
                class: "text-blue-500 hover:underline" %>
  </div>
</turbo-frame>
