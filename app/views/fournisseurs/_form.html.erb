<turbo-frame id="new_fournisseur">
  <%= form_with(model: fournisseur, class: "contents") do |form| %>
    <% if fournisseur.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(fournisseur.errors.count, "error") %> prohibited this fournisseur from being saved:</h2>

        <ul class="list-disc ml-6">
          <% fournisseur.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :nom %>
      <%= form.text_field :nom, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": fournisseur.errors[:nom].none?, "border-red-400 focus:outline-red-600": fournisseur.errors[:nom].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :type_fournisseur, "Type de fournisseur", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :type_fournisseur, ["Société (Neuf)", "Particulier / Organisme (Occasion)"], {}, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="my-5">
      <%= form.label :email %>
      <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": fournisseur.errors[:email].none?, "border-red-400 focus:outline-red-600": fournisseur.errors[:email].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :telephone %>
      <%= form.text_field :telephone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": fournisseur.errors[:telephone].none?, "border-red-400 focus:outline-red-600": fournisseur.errors[:telephone].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :adresse %>
      <%= form.textarea :adresse, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": fournisseur.errors[:adresse].none?, "border-red-400 focus:outline-red-600": fournisseur.errors[:adresse].any?}] %>
    </div>


    <div class="inline">
      <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</turbo-frame>