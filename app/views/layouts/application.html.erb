<script>
  let input = "";
  let lastScanTime = Date.now();

  document.addEventListener("keydown", function (e) {
    const now = Date.now();
    const isScanner = now - lastScanTime < 50; // Si moins de 50ms, on suppose que câ€™est un scan
    lastScanTime = now;

    if (!isScanner) {
      input = "";
    }

    if (e.key === "Enter") {
      if (input.length > 2) {
        // Redirection avec le code-barres en paramÃ¨tre
        window.location.href = "/ventes/new?code_barre=" + encodeURIComponent(input);
      }
      input = "";
    } else {
      input += e.key;
    }
  });
</script>

